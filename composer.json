{
    "name": "carticy/ai-checkout-for-woocommerce",
    "description": "ChatGPT Instant Checkout integration for WooCommerce using OpenAI Agentic Commerce Protocol",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/carticy-dev/design-system"
        },
        {
            "type": "vcs",
            "url": "https://github.com/carticy-dev/admin-layout"
        },
        {
            "type": "vcs",
            "url": "https://github.com/carticy-dev/admin-components"
        }
    ],
    "require": {
        "php": ">=8.0",
        "carticy/design-system": "dev-master",
        "carticy/admin-layout": "dev-master",
        "carticy/admin-components": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpcsstandards/phpcsutils": "^1.0",
        "phpcsstandards/phpcsextra": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Carticy\\AiCheckout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Carticy\\AiCheckout\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=./.phpcs.xml --basepath=. . -v",
        "lint:fix": "phpcbf --standard=./.phpcs.xml --basepath=. . -v",
        "format": "@lint:fix",
        "compat": "phpcs -p . --standard=PHPCompatibilityWP --runtime-set testVersion 8.0- --ignore=vendor,node_modules,tests",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
